<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ugn_green"
    tools:context="com.example.ugnapp.RegisterActivity">

    <!-- Logo Background (final: kecil & pudar) -->
    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/logougn"
        android:alpha="0.10"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Header (final: gradasi + garis bawah) -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/header_auth_rounded"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/headerLogo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/logougn"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UNIVERSITAS GLOBAL NUSANTARA"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/headerLogo"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp" />
    </RelativeLayout>

    <!-- Form Container (final: tanpa "No Telp" & "Login Link") -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingHorizontal="40dp"
        android:paddingTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrasi"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="30dp" />

        <!-- Nama Lengkap -->

        <TextView
            style="@style/AuthLabel.Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Lengkap"
            android:layout_marginStart="8dp"/>

        <EditText
            android:id="@+id/etFullName"
            android:inputType="textCapWords"
            style="@style/AuthInput.Beige" />

        <!-- Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            style="@style/AuthLabel.Register"
            android:layout_marginStart="8dp"/>

        <EditText
            android:id="@+id/etEmail"
            android:inputType="textEmailAddress"
            style="@style/AuthInput.Beige" />

        <!-- Password (Simple, no toggle) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            style="@style/AuthLabel.Register"
            android:layout_marginStart="8dp"/>

        <EditText
            android:id="@+id/etPassword"
            android:inputType="textPassword"
            style="@style/AuthInput.Beige" />

        <!-- Confirm Password (Simple, no toggle) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            style="@style/AuthLabel.Register"
            android:layout_marginStart="8dp"/>

        <EditText
            android:id="@+id/etConfirmPassword"
            android:inputType="textPassword"
            style="@style/AuthInput.Beige" />

        <!-- Spacer (mendorong tombol ke bawah) -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Tombol Register (final: 200dp, gradasi, margin 40dp) -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/registerButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:background="@drawable/button_register"
            android:elevation="5dp"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text="Register"
            android:textColor="@color/ugn_beige_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="1000dp"
            android:layout_height="500dp"
            android:layout_marginBottom="10dp"
            android:alpha="0.10"
            android:src="@drawable/logougn" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
