<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor">@color/black</item>
    </style>
    <style name="AuthLabel.Register" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <!-- Ini adalah padding "maju" yang kamu minta -->
        <item name="android:layout_marginLeft">24dp</item>
    </style>
    <style name="AuthInput.Beige" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_input_beige_inset</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/ugn_input_placeholder</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="AuthLabel.Login" parent="AuthLabel.Register" />

    <style name="AuthInput.Beige.Password" parent="AuthInput.Beige">
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:paddingVertical">12dp</item>
    </style>

</resources>
